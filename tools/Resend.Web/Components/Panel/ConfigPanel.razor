@inject IDialogService DialogService
@attribute [RenderModeInteractiveServer(false)]

<FluentButton @onclick="@OpenPanelAsync" Appearance="Appearance.Accent">
    Open token config panel
</FluentButton>

@code {
    private IDialogReference? _dialog;
    object obj = "hola";

    private async Task OpenPanelAsync()
    {
        _dialog = await DialogService.ShowPanelAsync<SimplePanel>(obj, new DialogParameters<object>()
            {
                Content = "hola",
                Alignment = HorizontalAlignment.Right,
                Title = "Configuration",
                PrimaryAction = "Yes",
                SecondaryAction = "No",
            });
        DialogResult result = await _dialog.Result;
    }    
}
